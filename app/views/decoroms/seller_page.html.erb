            /* margin-left: 39px; */
        }
        #seller-home{
        }
        #backg{
            width:100%;
            height:540px;
            position:absolute;
            top:130%;
            /* opacity:0.6; */
        }
        #seller-head{
            position:absolute; 
            top:300px;
            left:30%;
            color:white; 
            z-index: 100;
            font-family:  monospace;
        }
        #seller-para{
           position:absolute; 
