<body>
    <div id = "seller-nav">
        <div id = "seller-logo">
            <%= image_tag 'TEXT-WHITE.png', alt: 'logo', id:'home-dec' %>
        </div>
        <a  href="/home" style = "margin-left:12%" class = "seller-a">Home</a>
        <a href="#" class = "seller-a">Services</a>
        <a href="#" class = "seller-a">Resources</a>
        <a href="#" class = "seller-a">FAQs</a>
