        <p id = "seller-para">Launch your business in 10 minutes</p>
        <%= image_tag 'beautiful.jpg', alt: 'logo',id:'backg' %> 
        <%if session[:current_user_id] == nil %>
             <a href = "#"><button id = "sell-butt" onclick = "alterFunction()">Start Selling</button></a>
        <%else%>
            <a href = "add_products"><button id = "sell-butt">Start Selling</button></a>
        <% end %>
